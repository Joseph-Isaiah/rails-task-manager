
<h1>Hello!</h1>

<% @tasks.each do |task| %>
  <h2><%= link_to task.title, task_path(task) %></h2>

  <p>Check when done:<%= check_box("task", task.id, {checked: task.completed}) %></p>


  <p><%= link_to "Edit chore:", edit_path(task) %></p>
  <p><%= link_to "Delete a chore:", destroy_path(task),
    method: :delete,
    data: { confirm: "Are you sure?" } %></p>
<% end %>


<%= link_to "Create a new chore:", new_path %>

